<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    {{#if isEdit}}
        <a href="/">Go Back</a>
    {{/if}}
    <form method="POST" action="/{{#if isEdit}}modify{{/if}}">
        <input type="hidden" name="id" value="{{employee._id}}">
        <div>
            First Name: <input type="text" name="firstName" value="{{employee.firstName}}" required>
        </div>
        <div>
            Last Name: <input type="text" name="lastName" value="{{employee.lastName}}" required>
        </div>
        <div>
            Department: 
            <select name="department">
                <option selected>Department 1</option>
                <option>Department 2</option>
                <option>Department 3</option>
            </select>
        </div>
        <div>
            Start Date: <input type="date" name="startDate" value="" required>
        </div>
        <div>
            Job Title: <input type="text" name="jobTitle" value="{{employee.jobTitle}}" required>
        </div>
        <div>
            Salary: <input type="number" name="salary" value="{{employee.salary}}" required>
        </div>
        <div>
            <input type="submit" name="insertEmployee">
        </div>
    </form>

    {{#if showTable}}
        {{{response}}}
        <table border='1'>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Start Date</th>
                <th>Job Title</th>
                <th>Salary</th>
                <th>Delete</th>
                <th>Modify</th>
            </tr>
            {{#each employees}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.firstName}}</td>
                <td>{{this.lastName}}</td>
                <td>{{this.startDate}}</td>
                <td>{{this.jobTitle}}</td>
                <td>{{this.salary}}</td>
                <td><a href="/delete/{{this._id}}">Delete</a></td>
                <td><a href="/{{this._id}}">Modify</a></td>
            </tr>
            {{/each}}
        </table>
    {{/if}}
</body>
</html>